<!doctype html>

<html lang="en">
<head>
  <meta charset="utf-8">

  <title>Media Library</title>
  <meta name="description" content="The Media Library">
  <meta name="author" content="Elias Douglas">

  <!-- bower:css -->
  <link rel="stylesheet" href="/lib/bootstrap/dist/css/bootstrap.css" />
  <link rel="stylesheet" href="/lib/font-awesome/css/font-awesome.css" />
  <!-- endbower -->

  <!-- bower:js -->
  <script src="/lib/jquery/dist/jquery.js"></script>
  <script src="/lib/bootstrap/dist/js/bootstrap.js"></script>
  <!-- endbower -->

  <!-- inject:css -->
  <link rel="stylesheet" href="/css/bootstrap.css">
  <link rel="stylesheet" href="/css/style.css">
  <!-- endinject -->

  <!-- inject:js -->
  <script src="/js/app.js"></script>
  <!-- endinject -->
  
  <!--[if lt IE 9]>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/html5shiv/3.7.3/html5shiv.js"></script>
  <![endif]-->
</head>

<body>
    <div class="container">
      <nav class="navbar navbar-default">
        <div class="container-fluid">
          <div class="navbar-header">
            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
              <span class="sr-only">Toggle navigation</span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
            </button>
            <a class="navbar-brand" href="#">Brand</a>
          </div>

          <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
            <ul class="nav navbar-nav">
              <% for(var i=0; i<nav.length; i++){%>
                <% if (nav[i].Nav.length > 0) { %>
                  <li class="dropdown">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><%=nav[i].Text%> <span class="caret"></span></a>
                    <ul class="dropdown-menu" role="menu">
                      <% for(var x=0; x<nav[i].Nav.length; x++){%>
                        <li><a href="<%=nav[i].Nav[x].Link%>"><%=nav[i].Nav[x].Text%></a>
                      <%}%>
                    </ul>
                  </li>
                <% } else { %>
                  <li><a href="<%=nav[i].Link%>"><%=nav[i].Text%></a>
                <% } %>
              <%}%>
            </ul>
            <form class="navbar-form navbar-right" role="search">
              <div class="form-group">
                <input class="form-control" placeholder="Search" type="text">
              </div>
              <button type="submit" class="btn btn-default">Submit</button>
            </form>
            <!--<ul class="nav navbar-nav navbar-right">
              <li><a href="#">Link</a></li>
            </ul>-->
          </div>
        </div>
      </nav>

      <div class="content">
        <table class="table table-striped table-hover ">
          <thead>
            <tr>
              <th>Id</th>
              <th>Name</th>
            </tr>
          </thead>
          <tbody>
          <% for(var i=0; i<data.length; i++){%>
            <tr>
              <td>
                <%=data[i].id%>
              </td>
              <td>
                <a href="/Video?id=<%=data[i].id%>"><%=data[i].name%></a>
              </td>
            </tr>
          <%}%>
        </table>
      </div>      
    </div>
</body>
</html>